programa {
  funcao inicio() {

  /*5.20 Desenvolva um programa para descobrir se o número lido no teclado par ou ímpar. */

  inteiro numeroQualquer
  real resto

  escreva("Digite um numero qualquer: ")
  leia(numeroQualquer)
    resto = numeroQualquer % 2
    se (resto==0){
      escreva ("Este numero é par!")
    }senao {
      escreva ("Este numero é impar")}




    
  }
}
